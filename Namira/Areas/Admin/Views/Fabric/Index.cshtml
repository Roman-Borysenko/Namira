@using Namira.Areas.Admin.ViewModels
@model List<Namira.Entities.Fabric>

@{ ViewBag.Title = "Fabric"; }

<div class="container">
    <h1>@ViewBag.Title</h1>
    <a asp-area="admin" asp-action="add" asp-controller="fabric" class="btn btn-outline-success">Add fabric</a>

    @await Html.PartialAsync(
        "../PartialViews/DataOutput",
        new DataOutputViewModel
            {
                Data = Model,
                DataType = typeof(Namira.Entities.Fabric),
                Fields = new string[] { "Id", "Name", "Slug" },
        EditLink = new Link() { Area = "Admin", Controller = "Fabric", Action = "Edit" },
        DeleteLink = new Link() { Area = "Admin", Controller = "Fabric", Action = "Delete" }
    })

    @await Html.PartialAsync("../PartialViews/Pagination", ViewBag.Paginator as Paginator)
</div>