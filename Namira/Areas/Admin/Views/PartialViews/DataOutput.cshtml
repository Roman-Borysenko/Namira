@model Namira.Areas.Admin.ViewModels.DataOutputViewModel

<table class="table table-hover mt-2">
    <thead>
        <tr>
            @foreach (var item in Model.Fields)
            {
                <th scope="col">@item</th>
            }
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model.Data)
        {
            <tr>
                @foreach (var field in Model.Fields)
                {
                    <td>@Model.DataType.GetProperty(field).GetValue(data)</td>
                }
                <td><a asp-area="@Model.EditLink.Area" asp-controller="@Model.EditLink.Controller" asp-action="@Model.EditLink.Action" asp-route-id="@Model.DataType.GetProperty("Id").GetValue(data)">Edit</a></td>
                <td><a asp-area="@Model.DeleteLink.Area" asp-controller="@Model.DeleteLink.Controller" asp-action="@Model.DeleteLink.Action" asp-route-id="@Model.DataType.GetProperty("Id").GetValue(data)">Delete</a></td>
            </tr>
        }
    </tbody>
</table>