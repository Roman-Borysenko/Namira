@using Namira.Areas.Admin.ViewModels
@model List<Namira.Entities.Category>

@{ ViewBag.Title = "Category"; }

<div class="container">
    <h1>@ViewBag.Title</h1>
    <a asp-area="admin" asp-action="Add" asp-controller="category" class="btn btn-outline-success">Add category</a>

    @await Html.PartialAsync(
        "../PartialViews/DataOutput", 
        new DataOutputViewModel { Data = Model, DataType = typeof(Namira.Entities.Category), Fields = new string[] { "Id", "Name", "MetaKeywords" },
        EditLink = new Link() { Area = "Admin", Controller = "Category", Action = "Edit" },
        DeleteLink = new Link() { Area = "Admin", Controller = "Category", Action = "Delete" } 
    })
    
    @await Html.PartialAsync("../PartialViews/Pagination", ViewBag.Paginator as Paginator)
</div>