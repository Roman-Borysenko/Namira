@model Category
<div class="container">
    <h1>Add category</h1>
    <form asp-area="Admin" asp-action="Add" asp-controller="Category" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="name">
            <small id="name" class="form-text text-muted"></small>
        </div>

        <div class="form-group">
            <label asp-for="MetaDescription">Meta Description</label>
            <textarea asp-for="MetaDescription" class="form-control"></textarea>
            <small id="name" class="form-text text-muted"></small>
        </div>

        <div class="form-group">
            <label asp-for="MetaKeywords">Meta Description</label>
            <textarea asp-for="MetaKeywords" class="form-control"></textarea>
            <small id="name" class="form-text text-muted"></small>
        </div>

        <div class="form-group">
            <label asp-for="Language"></label>
            <select asp-for="Language" asp-items="ViewBag.Languages" class="form-control"></select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>