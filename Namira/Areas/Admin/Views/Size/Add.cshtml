@model Namira.Areas.Admin.Models.Size

@{
    ViewBag.Title = "Add size";
    var action = ViewBag.Page == "edit" ? "Edit" : "Add";
}

<div class="container">
    <h1>@ViewBag.Title</h1>
    <form asp-area="Admin" asp-action="@action" asp-controller="Size" method="post">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <input asp-for="@Model.Id" type="hidden" />

        <div class="form-group">
            <label asp-for="@Model.Name">Name</label>
            <input asp-for="@Model.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Name" class="form-text text-muted"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Reduction">Reduction</label>
            <input asp-for="@Model.Reduction" type="text" class="form-control">
            <span asp-validation-for="@Model.Reduction" class="form-text text-muted"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}